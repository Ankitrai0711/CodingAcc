import java.util.*;
class main{
    public static  void main(String [] args){
        Scanner sc = new Scanner(System.in);
        int t=0;
        int n= sc.nextInt();
        int m=sc.nextInt();
        while(n>0&&m>0&&n+m>=4){
            if(n>m){
                n-=3;
                m-=1;
            }
            else{
                n-=2;
                m-=2;
            }
            t++;
        }
        System.out.println(t);
    }
}
